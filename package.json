{
  "name": "solid-shiki-textarea",
  "version": "0.1.6",
  "description": "textarea with shiki syntax highlighting",
  "license": "MIT",
  "author": "bigmistqke",
  "contributors": [],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bigmistqke/solid-shiki-textarea.git"
  },
  "homepage": "https://github.com/bigmistqke/solid-shiki-textarea#readme",
  "bugs": {
    "url": "https://github.com/bigmistqke/solid-shiki-textarea/issues"
  },
  "files": ["dist"],
  "private": false,
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "browser": {},
  "exports": {
    ".": "./dist/index.js",
    "./custom-element": "./dist/custom-element.js"
  },
  "typesVersions": {
    "*": {
      "*": ["dist/index.d.ts"],
      "custom-element": ["dist/custom-element.d.ts"]
    }
  },
  "scripts": {
    "dev": "vite serve dev",
    "build": "vite build && vite build --config vite.ce.config.ts",
    "build-watch": "vite build && vite build --config vite.ce.config.ts --watch",
    "build:dev": "vite build dev",
    "preview:dev": "vite preview dev",
    "prepublishOnly": "pnpm build",
    "types": "tsc",
    "format": "prettier --ignore-path .gitignore -w \"src/**/*.{js,ts,json,css,tsx,jsx}\" \"dev/**/*.{js,ts,json,css,tsx,jsx}\"",
    "lint": "concurrently pnpm:lint:*",
    "lint:code": "eslint --ignore-path .gitignore --max-warnings 0 src/**/*.{js,ts,tsx,jsx}",
    "lint:types": "tsc --noEmit",
    "update-deps": "pnpm up -Li"
  },
  "dependencies": {
    "@lume/element": "^0.12.0",
    "clsx": "^2.1.1"
  },
  "peerDependencies": {
    "shiki": "^1.6.2",
    "solid-js": "^1.6.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.25.6",
    "@babel/core": "^7.25.2",
    "@babel/plugin-proposal-decorators": "^7.24.7",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.45",
    "postcss-selector-parser": "^6.1.2",
    "prettier": "3.0.0",
    "solid-devtools": "^0.29.2",
    "solid-element": "^1.8.1",
    "solid-js": "^1.8.17",
    "tsup": "^8.0.2",
    "tsup-preset-solid": "^2.2.0",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "vite-plugin-css-classnames": "^0.0.2",
    "vite-plugin-dts": "4.0.0-beta.1",
    "vite-plugin-dts-bundle-generator": "^2.0.4",
    "vite-plugin-lib-inject-css": "^2.1.1",
    "vite-plugin-solid": "^2.10.2",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0"
  },
  "keywords": ["solid"],
  "packageManager": "pnpm@9.1.1",
  "engines": {
    "node": ">=18",
    "pnpm": ">=9.0.0"
  }
}
